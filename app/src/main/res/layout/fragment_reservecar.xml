<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/greenlandscape"
    tools:context="com.example.williamj.hertz.activity.ReserveCarFragment">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        >


        <Button
            android:id="@+id/reserverCar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Pickup Location"
            android:textSize="20dp"
            android:theme="@style/Widget.AppCompat.Button.Borderless"
            android:textStyle="bold"
            android:background="?attr/colorAccent"
            android:paddingLeft="5dp" />
        <View
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/datePick"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Pick a Date &amp; TIME"
            android:textSize="20dp"
            android:theme="@style/Widget.AppCompat.Button.Borderless"
            android:textStyle="bold"
            android:background="?attr/colorAccent"
            android:paddingLeft="5dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/vehiclePick"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Pick a Vehicle"
            android:textSize="20dp"
            android:theme="@style/Widget.AppCompat.Button.Borderless"
            android:textStyle="bold"
            android:background="?attr/colorAccent"
            android:paddingLeft="5dp"
            android:onClick="findVehicleButtonClick" />

    </LinearLayout>


</RelativeLayout>