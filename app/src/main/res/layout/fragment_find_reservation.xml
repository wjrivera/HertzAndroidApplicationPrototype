<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/greenlandscape"
    android:layout_gravity="center"
    tools:context="com.example.williamj.hertz.activity.FindReservationFragment">



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp">

        <Button
            android:id="@+id/editReservation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Reservation"
            android:textSize="20dp"
            android:theme="@style/Widget.AppCompat.Button.Borderless"
            android:textStyle="bold"
            android:background="?attr/colorAccent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:onClick="reserveButtonClick" />
        <View
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/checkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Checkout"
            android:textSize="20dp"
            android:theme="@style/Widget.AppCompat.Button.Borderless"
            android:textStyle="bold"
            android:background="?attr/colorAccent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:onClick="reserveButtonClick" />


    </LinearLayout>



</RelativeLayout>
