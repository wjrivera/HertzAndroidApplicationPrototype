<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.williamj.hertz.activity.HomeFragment">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        >


        <Button
            android:id="@+id/reserverCar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Reserve a Car"
            android:textSize="20dp"
            android:theme="@style/Widget.AppCompat.Button.Borderless"
            android:textStyle="bold"
            android:background="@color/colorPrimary"
            android:paddingLeft="5dp"
            android:onClick="reserveButtonClick" />
        <View
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/lookupReservation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Lookup Reservation"
            android:textSize="20dp"
            android:theme="@style/Widget.AppCompat.Button.Borderless"
            android:textStyle="bold"
            android:background="@color/colorPrimary"
            android:paddingLeft="5dp"
            android:onClick="lookupReservationButtonClick"/>
        <View
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/findLocation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Find Location"
            android:textSize="20dp"
            android:theme="@style/Widget.AppCompat.Button.Borderless"
            android:textStyle="bold"
            android:background="@color/colorPrimary"
            android:paddingLeft="5dp"
            android:onClick="findLocationButtonClick"/>




    </LinearLayout>


</RelativeLayout>